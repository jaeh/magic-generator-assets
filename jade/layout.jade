doctype html
html(lang="en")
	head 
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		title Jascha Ehrenreich - Webbed Magic
		meta(name="description", content="Change the money, don't let the money change you. Working on a better day.")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href=static_dir + "css/main.css")

	body
		block header
			if logo
				header.main
					div#logo
						img(src=logo)

		block content 
			div empty body content

		block footer
			footer.main 
				div#imprint
					| created by 
					a(href="https://bwb.is" target="utopia") 
						img(src=img_dir + "bwb.png" alt="BitcoinersWithoutBorders")
					| @ 
					a(href="http://www.metalab.at" target="metalab")
						img(src=img_dir + "metalab.png" alt="Metalab")

		script(src=static_dir + "js/script.js")
